extends ../layout

block content
    h1.
         #{title}
    ul
        - each obj, i in obs
            li
                = obj.name
                = obj.badge
                = obj.dob
                = obj.isloved
                = obj._id
                form(action='/obs/#{obj._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit').
                        Delete
                p 
                    a(href='/obs/#{obj._id}/edit') Edit
                p
                    a(href='/obs/#{obj._id}') Show
                    
    p   This is the end!